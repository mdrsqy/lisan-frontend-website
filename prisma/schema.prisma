generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- 1. Model Pengguna (User) ---
model User {
  id              String   @id @default(cuid())
  email           String   @unique
  name            String?
  status          UserStatus @default(ACTIVE) // ACTIVE, BLOCKED
  joinDate        DateTime @default(now())
  lastActive      DateTime @updatedAt
  lessonsCompleted Int @default(0) // Jumlah pelajaran yang diselesaikan
  learningLevel   String   @default("Beginner") // Beginner, Intermediate, Advanced
  
  // Relasi: Riwayat Aktivitas
  activityHistory UserActivity[]
  
  @@map("users")
}

enum UserStatus {
  ACTIVE
  BLOCKED
}

// --- 2. Model Konten (Lesson) ---
model Lesson {
  id               String   @id @default(cuid())
  title            String
  module           String // Misalnya: Fundamentals, Conversation
  status           ContentStatus @default(DRAFT) // DRAFT, PUBLISHED
  videoUrl         String // URL video isyarat
  views            Int      @default(0)
  completionRate   Float    @default(0.0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  // Relasi: Riwayat Aktivitas pengguna terkait pelajaran ini
  activities       UserActivity[]
  
  @@map("lessons")
}

enum ContentStatus {
  DRAFT
  PUBLISHED
}

// --- 3. Model Aktivitas Pengguna (Untuk "Recent User Activity") ---
model UserActivity {
  id        String   @id @default(cuid())
  userId    String
  lessonId  String? // Nullable jika aktivitas bukan tentang pelajaran (misal: login)
  action    String // Misalnya: "Completed lesson", "Passed quiz", "Started module"
  timestamp DateTime @default(now())
  
  user   User   @relation(fields: [userId], references: [id])
  lesson Lesson? @relation(fields: [lessonId], references: [id])
  
  @@index([userId])
  @@index([timestamp])
  @@map("user_activities")
}